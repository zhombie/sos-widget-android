<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SOSWidget.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
    </style>

    <style name="SOSWidget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/SOSWidget.Theme.Toolbar</item>
    </style>

    <style name="SOSWidget.Theme.Toolbar" parent="">
        <item name="colorControlNormal">@color/sos_widget_gunmetal</item>
        <item name="actionMenuTextColor">@color/sos_widget_gunmetal</item>
    </style>

    <style name="SOSWidget.Toolbar.Title.TextAppearance" parent="SOSWidget.TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/sos_widget_light_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SOSWidget.Toolbar.Subtitle.TextAppearance" parent="SOSWidget.TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/sos_widget_very_dark_grayish_blue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>